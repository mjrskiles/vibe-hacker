{
  "greenfield_mode": false,
  "priming": {
    "files": [
      "README.md",
      "docs/ARCHITECTURE.md"
    ],
    "globs": [
      "docs/planning/decision-records/*.md",
      "docs/planning/action-plans/AP-*-*.md"
    ],
    "instructions": "Focus on active action plans and pending decisions."
  },
  "protected_paths": {
    "rules": [
      {
        "pattern": "docs/planning/*/archive/**",
        "tier": "readonly",
        "message": "Archived documents are read-only historical records."
      },
      {
        "pattern": "docs/planning/decision-records/[0-9][0-9][0-9]-*.md",
        "tier": "guided",
        "skill": "planning",
        "message": "ADRs should be managed through the planning skill."
      },
      {
        "pattern": "docs/planning/feature-designs/FDP-*.md",
        "tier": "guided",
        "skill": "planning",
        "message": "FDPs should be managed through the planning skill."
      },
      {
        "pattern": "docs/planning/action-plans/AP-*.md",
        "tier": "guided",
        "skill": "planning",
        "message": "Action plans should be managed through the planning skill."
      },
      {
        "pattern": "templates/**",
        "tier": "remind",
        "message": "This is a template file. Ensure placeholders are preserved."
      }
    ]
  }
}
